<div class="container">
  <h1>New Game</h1>
  <ul class="list-inline">
    <% @letters.each do |letter| %>
      <li class="list-inline-item"><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="post" data-turbo="false">
    <label for="play" class="form-label">What is the longest word you can find?</label>
    <div class="input-group">
      <input type="text" class="form-control" name="word" placeholder="Enter word" aria-label="word">
      <button class="btn btn-outline-secondary" type="submit" id="play">Play</button>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'grid', @letters %>
  </form>
</div>
